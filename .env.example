# SecureChat Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real secrets

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=securechat
DB_USER=scuser
DB_PASSWORD=scpass

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# PKI Configuration
CA_CERT_PATH=certs/ca-cert.pem
CA_KEY_PATH=certs/ca-key.pem
SERVER_CERT_PATH=certs/server-cert.pem
SERVER_KEY_PATH=certs/server-key.pem
CLIENT_CERT_PATH=certs/client-cert.pem
CLIENT_KEY_PATH=certs/client-key.pem

# Transcript Storage
TRANSCRIPT_DIR=transcripts/

# DH Parameters (can be overridden, default safe primes used in code)
# DH_PRIME_BITS=2048
